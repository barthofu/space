{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"strictPropertyInitialization": false,
		"types": ["node", "jest"],

		"baseUrl": ".",
        "paths": {

			"@configs": ["./configs/"],
			"@ecs": ["./src/core/ecs/"],
			"@entities": ["./src/entities/"],
			"@components": ["./src/components/"],
			"@systems": ["./src/systems/"],
			
			"@utils/*": ["./src/utils/*"],
			"@core/*": ["./src/core/*"],

            "@/*": ["./src/*"]
        }
	},
	"include": ["./src", "./configs", "main.ts", "./public", "./tests"],
	"paths": ["node_modules/*", "src/utils/types/*"]
}
